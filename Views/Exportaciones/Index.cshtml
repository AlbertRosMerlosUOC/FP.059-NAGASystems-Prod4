@{
    ViewData["Title"] = "Exportar Datos a XML";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}

<form asp-action="ExportarXml" asp-controller="Exportaciones" method="post">
    <button type="submit" name="tipoExportacion" value="clientes">Exportar Clientes</button>
    <button type="submit" name="tipoExportacion" value="habitaciones">Exportar Habitaciones</button>
    <button type="submit" name="tipoExportacion" value="reservas">Exportar Reservas</button>
    <button type="submit" name="tipoExportacion" value="servicios">Exportar Servicios</button>
    <button type="submit" name="tipoExportacion" value="ofertas">Exportar Ofertas</button>
    <button type="submit" name="tipoExportacion" value="tiposHabitacion">Exportar Tipos de Habitación</button>
    <button type="submit" name="tipoExportacion" value="tiposAlojamiento">Exportar Tipos de Alojamiento</button>
    <button type="submit" name="tipoExportacion" value="tiposTemporada">Exportar Tipos de Temporada</button>
</form>