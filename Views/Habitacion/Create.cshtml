@model CapaModelo.Habitacion
@using CapaModelo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Habitacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Habitacion" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoHabitacionId" class="control-label"></label>
                <select asp-for="TipoHabitacionId" class="form-control" asp-items="ViewBag.TipoHabitacionId">
                    <option value="">-- Select --</option>
