@model CapaModelo.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DNI" class="control-label">DNI</label>
                <select asp-for="DNI" class="form-control" asp-items="@ViewBag.DNI"></select>
            </div>
            <div class="form-group">
                <label asp-for="HabitacionId" class="control-label">Número de Habitación</label>
                <input asp-for="HabitacionId" class="form-control" />
            </div>            <div class="form-group">
                <label asp-for="TipoAlojamientoId">Tipo de Alojamiento</label>
                <select asp-for="TipoAlojamientoId" class="form-control" asp-items="@ViewBag.TipoAlojamientoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoTemporadaId">Tipo de Temporada</label>
                <select asp-for="TipoTemporadaId" class="form-control" asp-items="@ViewBag.TipoTemporadaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label>
                <input asp-for="FechaInicio" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label">Fecha de Fin</label>
                <input asp-for="FechaFin" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label asp-for="OfertaId">Oferta</label>
                <select asp-for="OfertaId" class="form-control" asp-items="@ViewBag.OfertaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
